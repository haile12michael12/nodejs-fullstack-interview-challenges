# Environment variables for memory management challenge

# Backend configuration
PORT=3000
NODE_ENV=development
HEAP_SNAPSHOT_DIR=./snapshots
MAX_HEAP_SIZE=512

# Memory management configuration
GC_INTERVAL=30000
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=90

# Profiling configuration
PROFILE_HEAP=true
PROFILE_CPU=false

# Leak detection
LEAK_DETECTION_ENABLED=true
LEAK_THRESHOLD=1000